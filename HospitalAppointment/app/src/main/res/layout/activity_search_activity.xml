<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".Search_activity">


    <TextView
        android:id="@+id/Heading_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What you are Looking For?"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"

        >

    </androidx.appcompat.widget.AppCompatSpinner>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_city"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:entries="@array/search_city"
        >

    </androidx.appcompat.widget.AppCompatSpinner>

    <Button
        android:id="@+id/search_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_rounded"
        />

    <TextView
        android:id="@+id/subhead_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:gravity="center"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:queryHint="Search Doctor/Hospital"
        android:layout_marginTop="20dp"
        app:iconifiedByDefault="false"
        >

    </androidx.appcompat.widget.SearchView>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        >
    </ListView>
    <Button
        android:id="@+id/search2_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_rounded"
        />

</LinearLayout>